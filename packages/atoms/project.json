{
  "name": "@meroka/atoms",
  "sourceRoot": "packages/atoms/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "cd packages/atoms && npm run build"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ],
      "options": {
        "command": "cd packages/atoms && npm run lint"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "inputs": ["default", "{workspaceRoot}/tsconfig.json"],
      "options": {
        "command": "cd packages/atoms && npx tsc --noEmit"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "inputs": ["default", "^production"],
      "options": {
        "command": "cd packages/atoms && npm test"
      }
    }
  },
  "tags": ["scope:ui", "type:atoms"],
  "implicitDependencies": ["@meroka/tokens"]
}
