{
  "name": "@meroka/tokens",
  "sourceRoot": "packages/tokens/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "cd packages/tokens && npm run build"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ],
      "options": {
        "command": "cd packages/tokens && npm run lint"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "inputs": ["default", "{workspaceRoot}/tsconfig.json"],
      "options": {
        "command": "cd packages/tokens && npx tsc --noEmit"
      }
    }
  },
  "tags": ["scope:shared", "type:data"]
}
