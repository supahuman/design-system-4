{
  "name": "ds4-llm-context",
  "displayName": "DS4 LLM Context",
  "description": "Run LLM queries with the repository engineer context from VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:llm.runWithEngineerContext"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "llm.runWithEngineerContext",
        "title": "LLM: Run with Engineer Context"
      }
    ]
  }
}
