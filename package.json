{
  "name": "@meroka/design-system",
  "version": "1.0.0",
  "description": "A modern design system built with TypeScript, React, and Atomic Design principles",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "build:pnpm": "npm run build --workspaces",
    "dev": "pnpm -r dev",
    "dev:playground": "nx run playground:dev",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "test:pnpm": "pnpm -r test",
    "lint": "nx run-many -t lint",
    "lint:affected": "nx affected -t lint",
    "lint:eslint": "eslint packages/**/*.ts apps/**/*.ts --fix",
    "type-check": "nx run-many -t type-check",
    "type-check:tsc": "tsc --noEmit",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\" \"apps/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\" \"apps/**/*.{ts,tsx,js,jsx,json,md}\"",
    "storybook": "pnpm --filter storybook dev",
    "playground": "pnpm --filter playground dev",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "nx run-many -t build && changeset publish",
    "nx": "nx"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "atomic-design",
    "components",
    "ui"
  ],
  "author": "Meroka",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nx": "^21.4.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
