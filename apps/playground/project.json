{
  "name": "playground",
  "sourceRoot": "apps/playground/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "cd apps/playground && npm run build"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/playground && npm run dev"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ],
      "options": {
        "command": "cd apps/playground && npm run lint"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "inputs": ["default", "{workspaceRoot}/tsconfig.json"],
      "options": {
        "command": "cd apps/playground && npx tsc --noEmit"
      }
    }
  },
  "tags": ["scope:app", "type:playground"],
  "implicitDependencies": ["@meroka/tokens", "@meroka/atoms"]
}
