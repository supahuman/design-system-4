{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@meroka/atoms": ["./packages/atoms"],
      "@meroka/molecules": ["./packages/molecules"],
      "@meroka/organisms": ["./packages/organisms"],
      "@meroka/pages": ["./packages/pages"],
      "@meroka/templates": ["./packages/templates"],
      "@meroka/tokens": ["./packages/tokens"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["vite/client", "node"]
  },
  "include": ["packages/**/*", "apps/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist", "build", "*.config.*"],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "bundler"
    }
  }
}
